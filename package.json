{
  "name": "meteor",
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@types/bun": "latest",
    "turbo": "2.6.0"
  },
  "packageManager": "bun@1.3.2",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "hono": "4.10.4",
      "typescript": "5.9.3",
      "@types/bun": "latest",
      "dotenv": "17.2.3",
      "better-auth": "1.3.34",
      "zod": "4.1.12",
      "drizzle-orm": "0.44.7"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @meteor/db db:push",
    "db:studio": "turbo -F @meteor/db db:studio",
    "db:generate": "turbo -F @meteor/db db:generate",
    "db:migrate": "turbo -F @meteor/db db:migrate",
    "db:drop": "turbo -F @meteor/db db:drop",
    "check-updates": "bunx taze -r"
  }
}
